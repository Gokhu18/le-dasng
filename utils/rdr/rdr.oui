<package> rdr
<include> msg oui
<include> "rdr.h"
<follow> msg

<opts> "aAP:kqF:L:"
<sort>
	-A autostart fast forward
	-a autostart regulated
	-P <path> specify base path for data files
	-k Invoke kluge to work around lgr bug
	-q quit when end of data is reached
	-F starting file index
	-L ending file index
<init>
  rdr_init(argc, argv);
